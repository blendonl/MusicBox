<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/cv_About"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="5dp"
    android:layout_marginRight="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="htpp://schemas.android.com/apk/res-auto">


        <com.pek.doni.musicbox.SelectableRoundedImageView
            android:id="@+id/albumAImage"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:background="@drawable/empty_music"
            app:sriv_left_top_corner_radius="10dp"
            app:sriv_right_top_corner_radius="10dp"

            xmlns:app="http://schemas.android.com/apk/res-auto" />

        <TextView
            android:id="@+id/albumATitle"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/albumAImage"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:text="Album"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/artistAName"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/albumATitle"
            android:layout_below="@id/albumATitle"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:text="Artist"
            android:textSize="14dp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>

